extends ../includes/layout

block main-content
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.p6-font(href='/') PLAYERS: 6
            .navbar-collapse.collapse.navbar-right
                ul.nav.navbar-nav
                    li(ng-class="{active: $route.current.activetab == 'home'}")
                        a(href='/') HOME
                    li(ng-class="{active: $route.current.activetab == 'players'}")
                        a(href='/players') PLAYERS
                    li(ng-class="{active: $route.current.activetab == 'contact'}")
                        a(href='/contact') CONTACT

    div.page(ng-view)

